{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true,
		"checkJs": false,
		"isolatedModules": true,
		"strict": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "src/**/*.js"],
	"exclude": ["src/**/*.test.js", "src/**/*.test.ts"]
}
